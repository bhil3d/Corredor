<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Tela_para_teste"
    android:background="#fff">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/imageView_Database_Dados_Funcionario"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:paddingTop="15dp"/>

        <ProgressBar
            android:id="@+id/progressBar_Database_Dados_Funcionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/editText_Database_Dados_Funcionario_Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText_Database_Dados_Funcionario_Idade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <EditText
        android:id="@+id/editText_Database_Dados_Funcionario_Matricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText_Database_Dados_Funcionario_Gerencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <TextView
        android:id="@+id/caminhofoto"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:text="Alterar"
        android:textStyle="bold"
        android:layout_height="wrap_content">

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_Database_Dados_Funconario_Alterar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Alterar"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            style = "@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/button_Database_Dados_Funconario_Remover"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Remover"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            style = "@style/Widget.AppCompat.Button.Borderless"/>



    </LinearLayout>

</LinearLayout>




