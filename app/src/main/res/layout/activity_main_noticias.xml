<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weberson.corredor.Activity.MainActivityNoticias">

        <LinearLayout
            android:id="@+id/linearLayout_Database_Funcionario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                    android:id="@+id/imageView_Database_Funcionario_Imagem"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintDimensionRatio="16:9"
                    android:padding="1dp"
                    android:src="@drawable/ic_galeria_24dp" />

            <EditText
                android:id="@+id/editText_Database_Funcionario_Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="titulo"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/editText_Database_Funcionario_Idade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="conteudo"
                android:padding="10dp"
                android:textSize="17sp" />



            <Button
                android:id="@+id/button_Database_Funcionario_Salvar"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Salvar"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />





        </LinearLayout>
</LinearLayout>
