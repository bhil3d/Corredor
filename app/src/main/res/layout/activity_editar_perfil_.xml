<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Editar_perfil_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="80dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageEditarPerfil"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/startblue"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/textAlterarFoto"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginEnd="84dp"

                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_add_fotos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            </ImageView>


        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editNomePerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_perfil"
            android:drawableTint="@android:color/darker_gray"
            android:hint="Nome usuário" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editEmailPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email"
                android:drawableTint="@android:color/darker_gray"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputEditText
         android:id="@+id/editTextoMatricula"
         android:layout_width="match_parent"
         android:hint="Matricula"
         android:drawableLeft="@drawable/icmatricula"
         android:layout_height="wrap_content">


     </android.support.design.widget.TextInputEditText>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextoGerencia"
            android:hint="Gerencia"
            android:drawableLeft="@drawable/ic_gerencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputEditText>


        <Button
            android:id="@+id/buttonSalvarAlteracoes"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stylobtnpfil"
            android:text="Salvar alterações"
            android:textColor="@color/startblue" />

    </LinearLayout>



    <TextView
        android:id="@+id/idfotoPF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TextView>

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_add_fotos"
        android:layout_width="50dp"
        android:layout_height="50dp">

    </ImageView>
</LinearLayout>