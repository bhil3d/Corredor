<?xml version="1.0" encoding="utf-8"?>

   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/funo_madeira"
    android:layout_height="match_parent"
    tools:context=".Activity.Tela_Detalhes_Relatorios_Publicos">



<android.support.constraint.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="match_parent"

tools:layout_editor_absoluteX="0dp"
tools:layout_editor_absoluteY="81dp">
<TextView

        android:id="@+id/textViewLider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/caixa_de_texto"
        android:text="Lider"
    android:textColor="@color/title_text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewTurma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAtivo" />

    <TextView

        android:id="@+id/editeManutencao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/caixa_de_texto"
        android:gravity="center"
        android:text="ManutenÃ§ao"
        android:textColor="@color/title_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView

        android:id="@+id/textViewEquipamento"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/caixa_de_texto"
        android:gravity="center"
        android:text="2940"
        android:textAlignment="center"
        android:textColor="@color/title_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editeManutencao" />

    <TextView

        android:id="@+id/textViewTurma"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/caixa_de_texto"
        android:gravity="center"
        android:text="Turma"
        android:textAlignment="center"
        android:textColor="@color/title_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEquipamento" />

    <TextView

        android:id="@+id/textViewAtivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/title_text_color"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/caixa_de_texto"
        android:text="Ativo"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewEquipamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editeManutencao" />

    <TextView

        android:id="@+id/textViewdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/caixa_de_texto"
        android:text="Data"
        android:textColor="@color/title_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLider" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/caixa_de_texto"
        android:gravity="center"
        android:text="Relatorio"
        android:textColor="@color/title_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewdata" />

    <TextView
        android:id="@+id/textviewRelatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/caixarelatorios"
        android:paddingTop="8dp"
        android:paddingBottom="2dp"
        android:text="Descricao"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/caixa_de_texto"
        android:gravity="center"
        android:text="Pendencias"
        android:textColor="@color/title_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewRelatorio" />

    <TextView
        android:id="@+id/textviewPendencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/caixarelatorios"
        android:paddingTop="8dp"
        android:paddingBottom="2dp"
        android:text="Descricao"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</android.support.constraint.ConstraintLayout>

    </ScrollView>